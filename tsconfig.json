{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true, // 암시적 any는 금지 (예: 타입 안 쓰면 에러)
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*", "./public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "__tests__/**/*.ts", "__tests__/**/*.tsx", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
